        if (h1 * 60 + m1 <= oraCurenta * 60 + minutulCurent /*&& oraCurenta * 60 + minutulCurent*/ <= h2 * 60 + m2) {
        %>
            <figure>
                <img src="<%= imag.cale_imagine %>"  alt="<%= imag.title %>" title="<%= imag.titlu %>">
                <figcaption><%= imag.descriere %></figcaption>
            </figure>
        <%
            afisate++;
            console.log(afisate)
        }  else { //daca afisate < 10 si nu mai sunt imagini care coresound intervalului de timp
